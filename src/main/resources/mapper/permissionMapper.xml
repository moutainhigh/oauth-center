<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oauth2.authcenter.dao.PermissionDao">

    <resultMap id="permission" type="com.oauth2.authcenter.entity.Permission">
        <result column="authority" property="authority"/>
    </resultMap>

    <select id="getPermissions" parameterType="int" resultType="java.util.ArrayList" resultMap="permission">
        SELECT authority FROM auth_permission WHERE "userId" = #{id};
    </select>

</mapper>