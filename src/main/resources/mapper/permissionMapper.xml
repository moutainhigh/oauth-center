<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oauth2.authcenter.dao.PermissionDao">

    <resultMap id="permission" type="com.oauth2.authcenter.entity.Permission">
        <result column="scope" property="scope"/>
        <result column="authority" property="authority"/>
        <result column="alias" property="alias"/>
    </resultMap>

    <select id="getPermissions" resultMap="permission">
        SELECT scope,authority,alias from (SELECT permission_id from oauth_object_permission WHERE object_id = #{objectId} and object_type = #{objectType}) a left join oauth_permission b on a.permission_id = b.id;
    </select>

</mapper>